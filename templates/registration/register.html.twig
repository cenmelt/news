{% extends 'base.html.twig' %}

{% block title %}{{ 'Register'|trans }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/register.css') }}">
{% endblock %}

{% block body %}
<div class="register-container">
    <div class="register-card">
        <h1 class="register-title">{{ 'Register'|trans }}</h1>

        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="register-alert register-alert-danger" role="alert" aria-live="polite">
                {{ flash_error }}
            </div>
        {% endfor %}

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, { 'attr': { 'class': 'register-form' } }) }}
            <div class="register-form-group">
                {{ form_row(registrationForm.email, { 
                    'label_attr': { 'class': 'register-form-label', 'aria-label': 'Email Address' },
                    'attr': { 'class': 'register-form-input', 'placeholder': 'Enter your email', 'aria-required': 'true' }
                }) }}
            </div>
            <div class="register-form-group">
                {{ form_row(registrationForm.plainPassword, { 
                    'label_attr': { 'class': 'register-form-label', 'aria-label': 'Password' },
                    'attr': { 'class': 'register-form-input', 'placeholder': 'Enter your password', 'aria-required': 'true' }
                }) }}
            </div>
            <div class="register-form-group">
                {{ form_row(registrationForm.agreeTerms, { 
                    'label_attr': { 'class': 'register-form-label', 'aria-label': 'Agree to terms' }
                }) }}
            </div>

            <button type="submit" class="register-btn-primary" aria-label="Submit registration form">
                {{ 'Register'|trans }}
            </button>
        {{ form_end(registrationForm) }}

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="register-alert register-alert-{{ label }}" role="alert" aria-live="polite">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>
{% endblock %}
