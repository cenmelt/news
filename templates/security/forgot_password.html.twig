{% extends 'base.html.twig' %}

{% block title %}{{ 'Forgot Password?'|trans }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/forgot_password.css') }}">
{% endblock %}

{% block body %}
<div class="forgot-password-container">
    <div class="forgot-password-card">
        <h1 class="forgot-password-title">{{ 'Forgot Password?'|trans }}</h1>

        {{ form_errors(ForgotPasswordForm) }}

        {{ form_start(ForgotPasswordForm, { 'attr': { 'class': 'forgot-password-form' } }) }}
            <div class="form-group">
                {{ form_row(ForgotPasswordForm.email, { 
                    'label_attr': { 'class': 'form-label', 'aria-label': 'Email Address' },
                    'attr': { 'class': 'form-input', 'placeholder': 'Enter your email', 'aria-required': 'true' } 
                }) }}
            </div>
            <button type="submit" class="btn-primary" aria-label="Send email to reset password">
                {{ 'Send email'|trans }}
            </button>
        {{ form_end(ForgotPasswordForm) }}

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" role="alert" aria-live="polite">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>
{% endblock %}
