{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div style="display: flex; justify-content: center; align-items: center; height: 100vh; background: linear-gradient(135deg, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.4)); font-family: 'Arial', sans-serif;">
        <div style="background-color: #fff; padding: 30px; border-radius: 15px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); width: 100%; max-width: 400px;">
            <h1 style="text-align: center; font-size: 28px; font-weight: bold; color: #333; margin-bottom: 20px;">Forgot Password?</h1>

            {{ form_errors(PassForMailForm) }}

            {{ form_start(PassForMailForm) }}
                <div style="margin-bottom: 20px;">
                    {{ form_row(PassForMailForm.email) }}
                </div>
                <button class="btn" type="submit" style="width: 100%; padding: 12px; font-size: 16px; background-color: #f90; color: white; border: none; border-radius: 8px; cursor: pointer; transition: background-color 0.3s;">
                    Send email
                </button>
            {{ form_end(PassForMailForm) }}

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}" style="font-size: 14px; padding: 15px; margin-top: 15px; border-radius: 8px; text-align: center; background-color: {% if label == 'error' %}#f8d7da{% else %}#d4edda{% endif %}; color: {% if label == 'error' %}#721c24{% else %}#155724{% endif %};">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
