{% extends 'base.html.twig' %}

{% block title %}{{ 'Password reset'|trans }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/reset_password.css') }}">
{% endblock %}

{% block body %}
<div class="reset-container">
    <div class="reset-card">
        <h1 class="reset-title">{{ 'Reset password'|trans }}</h1>

        {{ form_start(resetForm, { 'attr': { 'class': 'reset-form' } }) }}
            <div class="reset-form-group">
                {{ form_label(resetForm.password, null, { 'label_attr': { 'class': 'reset-form-label', 'aria-label': 'New password' } }) }}
                {{ form_widget(resetForm.password, { 'attr': { 'class': 'reset-form-input', 'aria-required': 'true', 'aria-describedby': 'passwordHelp' } }) }}
                {{ form_errors(resetForm.password) }}
                <small id="passwordHelp" class="reset-form-help">{{ 'Password must be at least 8 characters'|trans }}</small>
            </div>

            <button type="submit" class="reset-btn-primary" aria-label="Submit to reset your password">
                {{ 'RÃ©initialiser le mot de passe'|trans }}
            </button>
        {{ form_end(resetForm) }}
    </div>
</div>
{% endblock %}
