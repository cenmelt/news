{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div style="display: flex; justify-content: center; align-items: center; height: 100vh; background: linear-gradient(135deg, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.4)); font-family: 'Arial', sans-serif;">
    <div style="background-color: #fff; padding: 30px; border-radius: 15px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); width: 100%; max-width: 400px;">
        <h1 style="text-align: center; font-size: 28px; font-weight: bold; color: #333; margin-bottom: 20px;">Réinitialisez votre mot de passe</h1>

        {{ form_start(resetForm) }}
            <div style="margin-bottom: 20px;">
                {{ form_row(resetForm.password) }}
            </div>

            <button type="submit" style="width: 100%; padding: 12px; font-size: 16px; background-color: #f90; color: white; border: none; border-radius: 8px; cursor: pointer; transition: background-color 0.3s;">
                Réinitialiser le mot de passe
            </button>
        {{ form_end(resetForm) }}
    </div>
</div>
{% endblock %}
