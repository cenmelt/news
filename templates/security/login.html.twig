{% extends 'base.html.twig' %}

{% block body %}
    <div style="display: flex; justify-content: center; align-items: center; height: 100vh; background: linear-gradient(135deg, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.4)); font-family: 'Arial', sans-serif;">
        <div style="background-color: #fff; padding: 30px; border-radius: 15px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); width: 100%; max-width: 400px; border: none;">
            <h1 style="text-align: center; font-size: 28px; font-weight: bold; color: #333; margin-bottom: 20px;">Sign In</h1>

            <form method="post">
                {% if error %}
                    <div style="font-size: 14px; border-radius: 8px; padding: 15px; background-color: #f8d7da; color: #721c24; text-align: center;">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <!-- Champ Email -->
                <div style="margin-bottom: 20px;">
                    <label for="username" style="font-size: 14px; font-weight: 600; color: #555;">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" style="width: 100%; padding: 12px; font-size: 16px; color: #333; border-radius: 8px; border: 1px solid #ddd; box-sizing: border-box; transition: all 0.3s ease;" placeholder="Enter your email" autocomplete="email" required autofocus>
                </div>

                <!-- Champ Mot de Passe -->
                <div style="margin-bottom: 20px;">
                    <label for="password" style="font-size: 14px; font-weight: 600; color: #555;">Password</label>
                    <input type="password" name="_password" id="password" style="width: 100%; padding: 12px; font-size: 16px; color: #333; border-radius: 8px; border: 1px solid #ddd; box-sizing: border-box; transition: all 0.3s ease;" placeholder="Enter your password" autocomplete="current-password" required>
                </div>

                <!-- Lien Mot de Passe OubliÃ© -->
                <div style="margin-bottom: 10px; display: flex; justify-content: space-between; align-items: center;">
                    <a href="{{ path('app_mailPass') }}" style="font-size: 12px; color: #4facfe; text-decoration: none; transition: color 0.3s;">Forgot your password ?</a>
                </div>

                <div style="margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center;">
                    <a href="{{ path('app_register') }}" style="font-size: 12px; color: #4facfe; text-decoration: none; transition: color 0.3s;" >Sign up</a>
                </div>
                <!-- Token CSRF -->
                <div style="margin-bottom: 20px;">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </div>

                <!-- Bouton de Soumission -->
                <div style="margin-bottom: 20px;">
                    <button type="submit" style="width: 100%; padding: 12px; font-size: 16px; background-color: #f90; color: white; border: none; border-radius: 8px; cursor: pointer; transition: background-color 0.3s;">Sign in</button>
                </div>
            </form>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}" style="font-size: 14px; padding: 15px; margin-top: 15px; border-radius: 8px; text-align: center; background-color: {% if label == 'error' %}#f8d7da{% else %}#d4edda{% endif %}; color: {% if label == 'error' %}#721c24{% else %}#155724{% endif %};">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
