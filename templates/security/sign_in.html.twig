{% extends 'base.html.twig' %}

{% block title %}{{ 'Sign In'|trans }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/sign_in.css') }}">
{% endblock %}

{% block body %}
<div class="sign-in-container">
    <div class="sign-in-card">
        <h1 class="sign-in-title">{{ 'Sign In'|trans }}</h1>

        <form method="post" class="sign-in-form">
            {% if error %}
                <div class="alert alert-error" role="alert" aria-live="polite">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <!-- Email Field -->
            <div class="form-group">
                <label for="username" class="form-label" aria-label="Email">{{ 'Email'|trans }}</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" 
                       class="form-input" placeholder="{{ 'Enter your email'|trans }}" 
                       autocomplete="email" required autofocus aria-required="true">
            </div>

            <!-- Password Field -->
            <div class="form-group">
                <label for="password" class="form-label" aria-label="Password">{{ 'Password'|trans }}</label>
                <input type="password" name="_password" id="password" 
                       class="form-input" placeholder="{{ 'Enter your password'|trans }}" 
                       autocomplete="current-password" required aria-required="true">
            </div>

            <!-- Forgot Password Link -->
            <div class="form-helper">
                <a href="{{ path('app_mailPass') }}" class="form-link">{{ 'Forgot your password?'|trans }}</a>
            </div>

            <!-- Sign-Up Link -->
            <div class="form-helper">
                <a href="{{ path('app_register') }}" class="form-link">{{ 'Sign up'|trans }}</a>
            </div>

            <!-- CSRF Token -->
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <!-- Submit Button -->
            <button type="submit" class="btn-primary">{{ 'Sign In'|trans }}</button>
        </form>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" role="alert" aria-live="polite">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>
{% endblock %}
