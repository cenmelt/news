{% extends 'base.html.twig' %}

{% block title %}{{ movie.title }}{% endblock %}

{% block body %}
    <div style="max-width: 800px; margin: 0 auto; font-family: Arial, sans-serif;">
        <h1 style="text-align: center; color: #333;">{{ movie.title }}</h1>
        
        <div style="display: flex; gap: 20px; margin-top: 20px;">
            <img src="https://image.tmdb.org/t/p/w300{{ movie.poster_path }}" alt="{{ movie.title }}" 
                 style="border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
            
            <div style="flex: 1;">
                <p><strong>Release Date:</strong> {{ movie.release_date }}</p>
                <p><strong>Genres:</strong> 
                    {% for genre in movie.genres %}
                        {{ genre.name }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </p>
                <p><strong>Rating:</strong> {{ movie.vote_average }}/10</p>
                <p><strong>Overview:</strong></p>
                <p style="color: #555; line-height: 1.6;">{{ movie.overview }}</p>
            </div>
        </div>

        <div style="margin-top: 20px; text-align: center;">
            <a href="{{ path('app_index') }}" style="padding: 10px 20px; background-color: #f90; color: white; text-decoration: none; border-radius: 5px;">Back to Home</a>
            {% if app.user and not movieAlreadyWatched %}
                <a href="{{ path('movie_watched_add', { id: movie.id, title: movie.title, poster_path: movie.poster_path }) }}" 
                style="padding: 10px 20px; background-color: #f90; color: white; text-decoration: none; border-radius: 5px;">
                Mark as watched
                </a>
            {% endif %}
        </div>
    </div>
{% endblock %}
