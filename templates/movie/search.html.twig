{% extends 'base.html.twig' %}

{% block title %}{{ 'Movie Search'|trans }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/search_movie.css') }}">
{% endblock %}

{% block body %}
<div class="movie-search-container">
    <h1 class="movie-search-title">{{ 'Search for Movies'|trans }}</h1>

    <form method="get" action="{{ path('movie_search') }}" class="movie-search-form">
        <input type="text" name="query" placeholder="{{ 'Search for a movie'|trans }}" 
               value="{{ query }}" class="search-input">

        <select name="genre" class="select-input">
            <option value="null">{{ 'None'|trans }}</option>
            {% for genre in genres %}
                <option value="{{ genre.id }}" {% if genre.id == selected_genre %}selected{% endif %}>
                    {{ genre.name }}
                </option>
            {% endfor %}
        </select>

        <select name="sort_by" class="select-input">
            <option value="popularity.desc" {% if sort_by == 'popularity.desc' %}selected{% endif %}>
                {{ 'Most Popular'|trans }}
            </option>
            <option value="popularity.asc" {% if sort_by == 'popularity.asc' %}selected{% endif %}>
                {{ 'Least Popular'|trans }}
            </option>
            <option value="release_date.desc" {% if sort_by == 'release_date.desc' %}selected{% endif %}>
                {{ 'Newest First'|trans }}
            </option>
            <option value="release_date.asc" {% if sort_by == 'release_date.asc' %}selected{% endif %}>
                {{ 'Oldest First'|trans }}
            </option>
        </select>

        <span>{{ 'From'|trans }}</span>
        <input type="number" name="yearFrom" min="1800" max="2100" placeholder="{{ 'Enter start year'|trans }}" 
               value="{{ yearFrom == 0 ? '' : yearFrom }}" class="year-input">

        <span>{{ 'to'|trans }}</span>
        <input type="number" name="yearTo" min="1800" max="2100" placeholder="{{ 'Enter end year'|trans }}" 
               value="{{ yearTo == 0 ? '' : yearTo }}" class="year-input">

        <button type="submit" class="btn-primary">{{ 'Search'|trans }}</button>
    </form>

    {% if movies %}
        <h2 class="search-results-title">{{ 'Search Results:'|trans }}</h2>
        <ul class="movies-list">
            {% for movie in movies %}
                <li class="movie-item">
                    <img src="https://image.tmdb.org/t/p/w200{{ movie.poster_path }}" alt="{{ movie.title }}" 
                         class="movie-poster">
                    <div class="movie-details">
                        <strong class="movie-title">{{ movie.title }}</strong> 
                        <span class="movie-release-date">({{ movie.release_date }})</span>
                        <br>
                        {% if movie.alreadyWatched %}
                            <span class="movie-watched">{{ 'Already Watched'|trans }}</span>
                        {% else %}
                            <a href="{{ path('movie_watched_add', { id: movie.id, title: movie.title, poster_path: movie.poster_path }) }}"
                               class="btn-watch">{{ 'Mark as watched'|trans }}</a>
                        {% endif %}
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="no-movies-message">{{ 'No movies found. Try searching for something else.'|trans }}</p>
    {% endif %}
</div>
{% endblock %}
